@model IEnumerable<Employees.Models.Skill>

@{
    ViewBag.Title = "Skills";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Skills</h2>
<p>
    @Html.ActionLink("New Skill", "New", "Skills", null, new { @class = "btn btn-primary" })
</p>
<table id="skills" class="table table-bordered table-hover">
    <thead>
        <tr>
            <th>Description</th>
            <th>EmployeeId</th>
        </tr>
    </thead>
    <tbody>
    </tbody>
</table>
@section scripts
{
    <script>
        $(document).ready(function () {
            var table = $("#skills").DataTable({
                ajax: {
                    url: "/api/skills",
                    dataSrc: ""
                },
                columns: [
                    {
                        data: "description",
                        render: function(data, type, skill) {
                            return "<a href='/skills/edit/" + skill.id + "'>" + skill.description + "</a>";
                        }
                    },
                    {
                        data: "employeeid"
                    },
                    {
                        data: "id",
                        render: function(data) {
                            return "<button class='btn-link js-delete' data-skill-id=" + data + ">Delete</button>";
                        }
                    }
                ]
            });


            $("#skills").on("click", ".js-delete", function () {
                var button = $(this);

                bootbox.confirm("Are you sure you want to delete this Skill?", function (result) {
                    if (result) {
                        $.ajax({
                            url: "/api/skills/" + button.attr("data-skill-id"),
                            method: "DELETE",
                            success: function () {
                                table.row(button.parents("tr")).remove().draw();
                            }
                        });
                    }
                });
            });
        });
    </script>
}
