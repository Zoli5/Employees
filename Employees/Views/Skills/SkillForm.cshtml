@using System.Data.Entity.Core.Metadata.Edm
@using System.Web.UI.WebControls
@model Employees.ViewModels.SkillFormViewModel
@{
    ViewBag.Title = "New";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@Model.Title</h2>

@using (Html.BeginForm("Save", "Skills"))
{
    <div class="form-group">
        @Html.LabelFor(s => s.Description)
        @Html.TextBoxFor(s => s.Description, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(s => s.EmployeeId)
        @Html.DropDownListFor(s => s.EmployeeId, new SelectList(Model.Employees, "Id", "Name"), "", new { @class = "form-control" })
        @Html.ValidationMessageFor(s => s.EmployeeId)
    </div>
    @Html.HiddenFor(s => s.Id)
    @Html.AntiForgeryToken()
    <button type="submit" class="btn btn-primary">Save</button>
}

@section scripts
{
    @Scripts.Render("~/bundles/jqueryval")
}