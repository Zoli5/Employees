@model IEnumerable<Employees.Models.Employee>

@{
    ViewBag.Title = "Employees";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Employees</h2>

<p>
    @Html.ActionLink("New Employee", "New", "Employees", null, new { @class = "btn btn-primary" })
</p>

<table id="employees" class="table table-bordered table-hover">
    <thead>
        <tr>
            <th>Name</th>
            <th>Address</th>
            <th>PhoneNumber</th>
            <th>Email</th>
            <th>Date Of Birth</th>
            <th>Gender</th>
            <th>IdCardNumber</th>
            <th>Company</th>
            <th>Delete</th>
        </tr>
    </thead>
    <tbody></tbody>
</table>
@section scripts
{
    <script>
        $(document).ready(function () {
            var table = $("#employees").DataTable({
                ajax: {
                    url: "/api/employees",
                    dataSrc: ""
                },
                columns: [
                    {
                        data: "name",
                        render: function (data, type, employee) {
                            return "<a href='/employees/edit/" + employee.id + "'>" + employee.name + "</a>";
                        }
                    },
                    {
                        data: "address"
                    },
					{
                        data: "phoneNumber"
                    },
					{
                        data: "email"
                    },
                    {
                        data: "dob"
                    },
                    {
                        data: "gender"
                    },
                    {
                        data: "idCardNumber"
                    },
                    {
                        data: "company.name",
                        render: function (data) {
                            if (data == null) {
                                return "";
                            } else {
                                return data;
                            }
                        }
                    },
                    {
                        data: "id",
                        render: function (data) {
                            return "<button class='btn-link js-delete' data-employee-id=" + data + ">Delete</button>";
                        }
                    }
                ]
            });

            $("#employees").on("click",
                ".js-delete",
                function () {
                    var button = $(this);

                    bootbox.confirm("Are you sure you want to delete this employee?",
                        function (result) {
                            if (result) {
                                $.ajax({
                                    url: "/api/employees/" + button.attr("data-employee-id"),
                                    method: "DELETE",
                                    success: function () {
                                        table.row(button.parents("tr")).remove().draw();
                                    }
                                });
                            }
                        });
                });
        });
    </script>
}
